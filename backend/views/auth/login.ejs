<%- include('../partials/head') %>
</head>
<body class="bg-gray-50">
<%- include('../partials/nav') %>

<div class="min-h-screen flex items-center justify-center">
  <main class="w-full max-w-md p-10 bg-white rounded-xl shadow-md border border-gray-200">
    
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-2">Login to your account</h1>
    <p class="text-center text-sm text-gray-500 mb-8">Please enter your credentials below</p>

    <form action="/login" method="POST" class="max-w-md mx-auto">
      <%- include('../partials/errors') %>
      
      <input
        type="email"
        name="email"
        placeholder="Email"
        value="<%= typeof oldInput !== 'undefined' ? oldInput.email : '' %>"
        class="w-full px-4 py-3 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        required/>
        
      <input
        type="password"
        name="password"
        placeholder="Password"
        class="w-full px-4 py-3 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        required/>
      
      <input
        type="submit"
        value="Login"
        class="w-full bg-red-500 text-white py-3 rounded-md hover:bg-red-600 transition duration-300 font-medium" />
      
      <div class="text-center mt-6 border-t pt-4">
        <p class="text-sm text-gray-600">
          Donâ€™t have an account?
          <a href="/signup" class="font-medium text-red-600 hover:text-red-800">
            Sign up
          </a>
        </p>
      </div>
    </form>
  </main>
</div>

</body>
</html>
